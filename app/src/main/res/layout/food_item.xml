<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cp_name"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cp_name"/>
        <TextView
            android:id="@+id/tv_type_name"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="type_name"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_tiaoliao"
        android:padding="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#66CDAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tiaoliao"/>
    <TextView
        android:id="@+id/tv_yuanliao"
        android:padding="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#66CDAA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="yuanliao"/>
    <TextView
        android:id="@+id/tv_texing"
        android:padding="5dp"
        android:textSize="15sp"
        android:text="texing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
